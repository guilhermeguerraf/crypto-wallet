<div class="container">
  <p id="notice"><%= notice %></p>

  <form>
    <fieldset disabled>
      <div class="form-group">
        <%= label_tag @mining_type.class.human_attribute_name(:description) %>
        <%= text_field_tag nil, @mining_type.description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag @mining_type.class.human_attribute_name(:acronym) %>
        <%= text_field_tag nil, @mining_type.acronym, class: "form-control" %>
      </div>
    </fieldset>
  </form>

  <%= link_to t('links.edit'), edit_mining_type_path(@mining_type), class: "btn btn-primary" %> |
  <%= link_to t('links.back'), mining_types_path, class: "btn btn-light" %>
</div>
